<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
            android:id="@+id/lblFishListItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:background="#fff"
            android:textColor="#232323"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true" android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/fishUploadStatusImageView" android:text="Fish Species"
            android:layout_marginLeft="8dp"/>

    <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/disclosure_symbol"
            android:id="@+id/fishUploadStatusImageView"
            android:layout_centerVertical="true" android:layout_alignParentEnd="true" android:scaleType="fitCenter"/>

</RelativeLayout>
