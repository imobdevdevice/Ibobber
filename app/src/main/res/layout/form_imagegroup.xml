<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:tag="triplog-form-switch"
                android:id="@+id/formImageButtonWrapper"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="12dp"
        >

    <TextView
            android:id="@+id/formLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form"
            android:gravity="center"
            android:layout_centerVertical="true"
            style="@style/FormItem" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/formImageButton"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:background="#00000000"
            android:scaleType="fitXY"
            style="@style/FormItem"
    />

    <HorizontalScrollView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="100dp"
    >

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">

            <ImageButton
                    android:id="@+id/tripLogImage0"
                    android:src="@drawable/image_placeholder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
            />
            <ImageButton
                    android:id="@+id/tripLogImage1"
                    android:src="@drawable/image_placeholder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
            />
            <ImageButton
                    android:id="@+id/tripLogImage2"
                    android:src="@drawable/image_placeholder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
            />
        </LinearLayout>
</HorizontalScrollView>



</RelativeLayout>