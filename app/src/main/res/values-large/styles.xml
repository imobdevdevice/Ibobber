<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar"></style>

    <style name="ActivityTheme" parent="AppTheme">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="HomeDrawer" parent="AppTheme">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HoloFormSpinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textColor">@color/formTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FormItem">
        <item name="android:textColor">@color/formTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DeviceButtonDeprecated">
        <item name="android:layout_height">100dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="SonarExploreButton">
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginLeft">45dp</item>
    </style>

    <style name="SonarLiveButton">
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginRight">45dp</item>
    </style>

    <style name="BobberIcon">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="DrawerBackgroundDeprecated">
        <item name="android:layout_height">195dp</item>
    </style>

    <style name="TextRegularSizeRegular" parent="FontRegular">
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="FontRegular">
        <item name="fontPath">fonts/SanFranciscoText_Regular.otf</item>
    </style>

    <style name="ButtonBold" parent="TextRegularSizeRegular">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
    </style>


</resources>
