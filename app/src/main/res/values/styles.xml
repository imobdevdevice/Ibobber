<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar"></style>

    <style name="ActivityTheme" parent="AppTheme">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="HomeDrawer" parent="AppTheme">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HoloFormSpinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:textColor">@color/formTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FormItem">
        <item name="android:textColor">@color/formTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="DeviceButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="SonarExploreButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="SonarLiveButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="BobberIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DrawerBackground">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextRegularSizeRegular" parent="FontRegular">
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="FontRegular">
        <item name="fontPath">fonts/SanFranciscoText_Regular.otf</item>
    </style>

    <style name="BackButton" parent="FontRegular">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:drawableLeft">@drawable/icon_back_white</item>
        <item name="android:drawablePadding">@dimen/small</item>
        <item name="android:text">@string/back</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/small</item>
    </style>


    <style name="ButtonBold" parent="TextRegularSizeRegular">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
    </style>


    <style name="RegularTransparentEditText" parent="FontRegular">
        <!--Reference Discussion Login Activity-->
        <item name="android:paddingTop">@dimen/large</item>
        <item name="android:paddingBottom">@dimen/medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="dividerColorHighlight">@color/white</item>
        <item name="dividerColor">@color/white</item>
        <item name="dividerDirection">Bottom</item>
        <item name="dividerSize">@dimen/divider</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="RootScrollStyle">
        <item name="android:paddingTop">@dimen/activity_margin_big</item>
        <item name="android:paddingLeft">@dimen/activity_margin_big</item>
        <item name="android:paddingRight">@dimen/activity_margin_big</item>
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="ThemeDialogCustomGuest">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
    </style>

    <style name="TextRegularSizeExtraLarge" parent="FontRegular">
        <item name="android:textSize">@dimen/extraLarge_text</item>
    </style>

    <style name="FontBold">
        <item name="fontPath">fonts/SanFranciscoText_Bold.otf</item>
    </style>

    <style name="titleFont">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
        <item name="fontPath">fonts/SanFranciscoText_Bold.otf</item>
    </style>

    <style name="boldTitleFont">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_24sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
        <item name="fontPath">fonts/SanFranciscoText_Bold.otf</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="regularFont">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
        <item name="fontPath">fonts/SanFranciscoText_Medium.otf</item>
    </style>

    <style name="smallFont">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
        <item name="fontPath">fonts/SanFranciscoText_Medium.otf</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
